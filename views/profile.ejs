<!doctype html>
<html>
<head>
    <title>Personal Diary</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <canvas></canvas>
  <% if (user.local.email) { %>
  <nav class="navMain">
    <h1>Personal Diary</h1>
    <ul>
      <li><a href="/logout" class="btn2">Logout</a></li>
      <li><a href="/unlink/local" class="btn2">Unlink</a></li>
  <% } else { %>
      <li><a href="/connect/local" class="btn">Connect Local</a></li>
  <% } %>
    </ul>
  </nav>
  <div class="profileMain">
    <section class="personal">
      <h2>Note of the Day</h2>
      <% if (user.local.email) { %>
      <form action="/messages" method="POST">
        <input type="text" value="<%= user.local.email %>" name="name" class="hide">
        <textarea type="text" placeholder="Diary of the Day" name="msg" rows="8" cols="80"></textarea>
        <input type="text" name="date" id="date" />
        <button type="submit">Submit</button>
      </form>
    <% } %>
    </section>



    <div class="row">
        <div class="col-sm-6">
          <h3>Diary</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].date %></span>
              <span class="hide"><%= messages[i].name %></span>
              <textarea><%= messages[i].msg %></textarea>
              <span><i class="far fa-edit"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>
      </div>
    </div>
  </div>

<section id="modal"></section>

<script src="main.js"></script>

</body>
</html>
